{% macro min_rating_slider(min_rating, max_rating, slider) %}
    <label class="form-label d-flex align-items-center" for="{{ slider.name }}Range">{{ slider.label.text }}:
        <output id="{{ slider.name }}Value" class="ms-1">{{ slider.data or min_rating }}</output>
        <img class="ms-1" src="{{ url_for('static', filename='images/star.svg') }}" alt="" width="16">
    </label>
    <input id="{{ slider.name }}Range"
           class="form-range"
           type="range"
           name="{{ slider.name }}"
           min="{{ min_rating }}"
           max="{{ max_rating }}"
           step="1"
           value="{{ slider.data or min_rating }}"
           oninput="document.getElementById('{{ slider.name }}Value').value = this.value">
{% endmacro %}