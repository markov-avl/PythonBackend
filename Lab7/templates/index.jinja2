    {{ render_table('Карточка', ('Название', 'Авторы', 'Дата выдачи', 'Дата возврата'), book_reader, 'book_reader_id', len) }}

    <form action="{{ url_for('search.index') }}" method="get">
        <input type="submit" value="Взять книгу">
    </form>
</div>
</body>
</html>