<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Поиск</title>
    <link rel="stylesheet" type="text/css" href="/static/CSS/search.css"/>
    <link rel="stylesheet" type="text/css" href="/static/CSS/style.css"/>
    {% import "macros.jinja2" as macros %}
</head>
<body>
<div class=menu>
    <ul>
        <li class=active><a href="/">Поиск книг</a></li>
    </ul>
</div>
<div class="content">
    <div class="lists">
        <form action="" method="post">
            {{ macros.render_filters('Жанры', genres, sel_genres, len) }}
            {{ macros.render_filters('Авторы', authors, sel_authors, len) }}
            {{ macros.render_filters('Издательства', publishers, sel_publishers, len) }}
            <br>
            <input type="submit" value="Найти">
            <input type="submit" name="clear" value="Очистить">
        </form>
    </div>
    <div class="result">
        <form action="{{ url_for('index') }}" method="get">
            <input type="button" onclick="window.location='{{ url_for('index') }}'" value="Не выбирать книгу">
        </form>
        <div class="chosen">
            {{ macros.render_selected(genres, sel_genres, 'Жанры', len) }}
            {{ macros.render_selected(authors, sel_authors, 'Авторы', len) }}
            {{ macros.render_selected(publishers, sel_publishers, 'Издательства', len) }}
        </div>
        <div class="cards">
            {{ macros.render_cards(card, len) }}
        </div>
    </div>
</div>
</body>
</html>